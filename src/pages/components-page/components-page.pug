extends ../../templates/template-base

block title
  title Отель Toxin | Страница с компонентами проекта

block styles
  link(rel="stylesheet" href="./components-page.scss")

block content
  include ../../utilities/mixins-components

  main.components-page
    h1.components-page__title.components-page__title_hidden Компоненты проекта
    article.ui-kit
      h2.ui-kit__title Цвета и шрифты
      .container
        .colors-fonts
          .colors-fonts__colors
            p.colors-fonts__color
              span.colors-fonts__color-image
              span.colors-fonts__color-name Dark shade 100%
                span.colors-fonts__color-hex #1f2041
            p.colors-fonts__color.colors-fonts__color_theme_75
              span.colors-fonts__color-image
              span.colors-fonts__color-name Dark shade 75%
                span.colors-fonts__color-hex #1f2041
            p.colors-fonts__color.colors-fonts__color_theme_50
              span.colors-fonts__color-image
              span.colors-fonts__color-name Dark shade 50%
                span.colors-fonts__color-hex #1f2041
            p.colors-fonts__color.colors-fonts__color_theme_25
              span.colors-fonts__color-image
              span.colors-fonts__color-name Dark shade 25%
                span.colors-fonts__color-hex #1f2041
            p.colors-fonts__color.colors-fonts__color_theme_5
              span.colors-fonts__color-image
              span.colors-fonts__color-name Dark shade 5%
                span.colors-fonts__color-hex #1f2041
            p.colors-fonts__color.colors-fonts__color_theme_purple
              span.colors-fonts__color-image
              span.colors-fonts__color-name Purple
                span.colors-fonts__color-hex #bc9cff
            p.colors-fonts__color.colors-fonts__color_theme_green
              span.colors-fonts__color-image
              span.colors-fonts__color-name Green
                span.colors-fonts__color-hex #6fcf97
          .colors-fonts__fonts
            p.colors-fonts__font.colors-fonts__font_theme_h1
              span.colors-fonts__font-type h1
              span.colors-fonts__font-example This one is the sub-section or widget title
            p.colors-fonts__font.colors-fonts__font_theme_h2
              span.colors-fonts__font-type h2
              span.colors-fonts__font-example Next one is the item title inside widgets
            p.colors-fonts__font.colors-fonts__font_theme_h3
              span.colors-fonts__font-type h3
              span.colors-fonts__font-example This is a label or CTA text
            p.colors-fonts__font
              span.colors-fonts__font-type Body
              span.colors-fonts__font-example This is the body text which is used for most of the design, like paragraphs, lists, etc.
    article.ui-kit
      h2.ui-kit__title Элементы формы
      .container
        .form-elements
          .form-elements__group
            .form-elements__text-fields
              p.form-elements__text-field.form-elements__text-field_theme_with-tip(data-tip="default")
                label.form-elements__title(for="field-1") text field
                +text-field-default(id="field-1" placeholder="Email")
              p.form-elements__text-field.form-elements__text-field_theme_with-tip(data-tip="hover / focus")
                label.form-elements__title(for="field-2") text field
                +text-field-default(id="field-2" value="This is pretty awesome" autofocus)
              p.form-elements__text-field.form-elements__text-field_theme_with-tip(data-tip="default")
                label.form-elements__title(for="field-3") dropdown
                +dropdown-default(id="field-3" placeholder="Сколько гостей")
              p.form-elements__text-field.form-elements__text-field_theme_with-tip(data-tip="default")
                label.form-elements__title(for="field-4") masked text field
                +text-field-masked(id="field-4" placeholder="дд.мм.гггг")
              p.form-elements__text-field
                label.form-elements__title(for="field-5") date dropdown
                +dropdown-date(id="field-5" placeholder="дд.мм.гггг")
                label.form-elements__title(for="field-6") date dropdown
                +dropdown-date(id="field-6" value="19.08.2019")
              p.form-elements__text-field
                label.form-elements__title(for="field-7") filter date dropdown
                +dropdown-default(id="field-7" value="19 авг - 23 авг")
              p.form-elements__text-field
                label.form-elements__title(for="field-8") subscription text field
                +text-field-subscription(id="field-8" placeholder="Email")
            .form-elements__buttons-one
              p.form-elements__buttons
                b.form-elements__title checkbox buttons
                +checkbox({"id": "field-9", "title": "Можно курить"})
                +checkbox({"id": "field-10", "title": "Можно с питомцами"})(checked)
                +checkbox({"id": "field-11", "title": "Можно пригласить гостей (до 10 человек)"})(checked)
              p.form-elements__buttons
                b.form-elements__title radio buttons
                +radio-button({"id": "field-12", "title": "Мужчина"})(name="gender" checked)
                +radio-button({"id": "field-13", "title": "Женщина"})(name="gender")
              p.form-elements__buttons
                b.form-elements__title toggle
                +toggle-button({"id": "field-14", "title": "Получать спецпредложения"})(checked)
                +toggle-button({"id": "field-15", "title": "Получать спецпредложения"})
              p.form-elements__buttons
                b.form-elements__title like button
                +button-like("2")
                +button-like("12")(class="button_theme_liked")
              p.form-elements__buttons
                b.form-elements__title rate button
                +rating(4)
                +rating(5)
            .form-elements__buttons-two
              p.form-elements__buttons
                +range-slider({"id": "field-16", "title": "range slider", "description": ""})
              p.form-elements__buttons
                b.form-elements__title buttons
                +link-with-purple-gradient("click me")
                +link-with-purple-gradient("click me")
              p.form-elements__buttons
                +link-with-border-gradient("click me")
                +link-with-border-gradient("click me")
              p.form-elements__buttons
                +link-default("click me")
                +link-default("click me")
              p.form-elements__buttons
                +link-with-purple-gradient-and-arrow("перейти к оплате")
              div.form-elements__buttons
                b.form-elements__title pagination
                +pagination
          .form-elements__group
            .form-elements__dropdowns
              .form-elements__dropdowns-group
                p.form-elements__dropdown.form-elements__dropdown_theme_with-tip(data-tip="default")
                  label.form-elements__title(for="field-17") dropdown
                  +dropdown-default(id="field-17" value="2 спальни, 2 кровати...")
                p.form-elements__dropdown.form-elements__dropdown_theme_with-tip(data-tip="expanded")
                  label.form-elements__title(for="field-18") dropdown
                  +dropdown-guests(id="field-18" value="2 спальни, 2 кровати...")
              .form-elements__dropdowns-group
                p.form-elements__dropdown
                  label.form-elements__title(for="field-19") dropdown
                  +dropdown-default(id="field-19" placeholder="Сколько гостей")
              .form-elements__dropdowns-group
                p.form-elements__dropdown
                  label.form-elements__title(for="field-20") dropdown
                  +dropdown-default(id="field-20" value="3 гостя")
          .form-elements__group
            .form-elements__checkbox-expandable
              +checkbox-expandable({"title": "expandable checkbox list", "items": []})
              +checkbox-expandable({"title": "expandable checkbox list",
              "items": [
                {"title": "Завтрак", "name": "breakfast"},
                {"title": "Письменный стол", "name": "desk"},
                {"title": "Стул для кормления", "name": "chair"},
                {"title": "Кроватка", "name": "bed"},
                {"title": "Телевизор", "name": "tv"},
                {"title": "Шампунь", "name": "shampoo"}]})
            .form-elements__checkbox-rich
              b.form-elements__title rich checkbox buttons
              +checkbox({"id": "field-21", "title": "Широкий коридор", "description": "Ширина коридоров в номере не менее 91 см."})
              +checkbox({"id": "field-22", "title": "Помощник для инвалидов", "description": "На 1 этаже вас встретит специалист  и проводит до номера."})
            .form-elements__bullet-list
              b.form-elements__title bullet list
              +bullet-list(['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
          .form-elements__group
            .form-elements__advantages
              +advantage({ "icon": "../../images/advantages/comfort.svg","title": "Комфорт","description": "Шумопоглощающие стены"})
              +advantage({"icon": "../../images/advantages/convenience.svg","title": "Удобство","description": "Окно в каждой из спален"})
            .form-elements__testimonials
              +testimonial({
                "image": "../../images/testimonials/1.jpg",
                "author": "Мурад Сарафанов",
                "date": "5 дней назад",
                "text": "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей",
                "likes": "12"})
    article.ui-kit.ui-kit_theme_light
      h2.ui-kit__title Карточки
      .container
        .cards
          +form-find-room
          +form-confirm-room
          +form-registration
          +form-login
          +room({
            "image": "../../images/rooms/room1.jpg",
            "alt": "Роскошный номер на одного с большой кроватью",
            "number": 888,
            "lux": true,
            "price": "9 990₽",
            "rating": 5,
            "testimonials": 145})
          +room({
            "image": "../../images/rooms/room2.jpg",
            "alt": "Просторный номер на троих с тремя кроватями",
            "number": 840,
            "lux": false,
            "price": "9 990₽",
            "rating": 4,
            "testimonials": 65})
    article.ui-kit.ui-kit_theme_light
      h2.ui-kit__title Хедеры и футеры
      .container
        .headers-footers
          +main-header
          +main-header({"theme": "logged"})
          +main-footer
          +main-footer({"theme": "poor"})


  script(src="./components-page.js")