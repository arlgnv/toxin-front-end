extends ../../templates/template-base

block description
  meta(name="description" content="Мы подобрали для вас самые подходящие номера под ваши требования, вам осталось лишь выбрать.")

block keywords
  meta(name="keywords" content="подобрать номера отель toxin, выбрать номер в отеле toxin")

block title
  title Отель Toxin | Поиск номеров

block styles
  link(rel="stylesheet" href="./rooms-page.scss")

block content
  include ../../utilities/mixins-pug

  include ../../components/main-header/main-header-non-authorized
  main.rooms-page
    h1.visually-hidden Поиск номеров
    .container
      section.filter
        h2.visually-hidden Фильтр номеров
        button.filter__show-filter-button.js-filter__show-filter-button(type="button") Показать фильтр
        form.filter__form(action="https://echo.htmlacademy/ru" method="post")
          button.filter__close-filter-button.filter__close-filter-button_hidden.js-filter__close-filter-button(type="button" aria-label="Закрыть фильтр")
          p.filter__group
            +c-field-dropdown("filter", "field-date", "Даты пребывания в отеле", true)(name="date" value="19 авг - 23 авг")
          p.filter__group
            +c-field-dropdown("filter", "field-guests", "Гости", true)(name="guests" value="3 гостя, 1 младенец")
          p.filter__group
            +c-range("filter", "field-price", "Диапазон цены", "Стоимость за сутки пребывания в номере")(name="price")
          fieldset.filter__group
            legend.filter__title Дополнительные возможности
            ul.filter__list
              li.filter__item
                +c-checkbox-poor("filter", "opportunity-smoke", "Можно курить")(name="opportunity-smoke")
              li.filter__item
                +c-checkbox-poor("filter", "opportunity-pets", "Можно с питомцами")(name="opportunity-pets" checked)
              li.filter__item
                +c-checkbox-poor("filter", "opportunity-guests", "Можно пригласить гостей (до 10 человек)")(name="opportunity-guests" checked)
          fieldset.filter__group
            legend.filter__title Доступность
            ul.filter__list
              li.filter__item
                +c-checkbox-rich("filter", "opportunity-wide-aisle", "Широкий коридор", "Ширина коридоров в номере не менее 91 см.")(name="opportunity-wide-aisle")
              li.filter__item
                +c-checkbox-rich("filter", "opportunity-hepler", "Помощник для инвалидов", "На 1 этаже вас встретит специалист  и проводит до номера.")(name="opportunity-helper")
          p.filter__group
            +c-field-dropdown("filter", "field-comfort", "Удобства номера", true)(name="comfort" placeholder="Выберите удобства")
          +c-checkbox-expandable("filter", "Дополнительные удобства", {
            "Завтрак": "breakfast",
            "Письменный стол": "desk",
            "Стул для кормления": "chair",
            "Кроватка": "bed",
            "Телевизор": "tv",
            "Шампунь": "shampoo"})
      section.rooms
        h2.rooms__title Номера, которые мы для вас подобрали
        ul.rooms__list
          li.rooms__item
            a(href="/../room-page/room-page.pug")
              +c-room("room", {
                image: "../../components/room/images/room1.jpg",
                alt: "Роскошный номер на одного с большой кроватью",
