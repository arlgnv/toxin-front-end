extends ../../templates/template-base

block description
  meta(name="description" content="Мы подобрали для вас самые подходящие номера под ваши требования, вам осталось лишь выбрать.")

block keywords
  meta(name="keywords" content="подобрать номера отель toxin, выбрать номер в отеле toxin")

block title
  title Отель Toxin | Поиск номеров

block styles
  link(rel="stylesheet" href="./rooms-page.scss")

block content
  include ../../utilities/mixins-components

  +main-header
  main.rooms-page
    h1.rooms-page__title.rooms-page__title_hidden Поиск номеров
    .container
      section.filter.js-filter
        h2.filter__title.filter__title_hidden Фильтр номеров
        button.filter__show-button(type="button") Показать фильтр
        button.filter__close-button.filter__close-button_hidden(type="button" aria-label="Закрыть фильтр")
        form.filter__form(action="https://echo.htmlacademy/ru" method="post")
          p.filter__group
            label.filter__label(for="field-date") Даты пребывания в отеле
            +dropdown-default(id="field-date" name="date" value="19 авг - 23 авг")
          p.filter__group
            label.filter__label(for="field-guests") Гости
            +dropdown-default(id="field-guests" name="guests" value="3 гостя, 1 младенец")
          p.filter__group
            +range-slider({"id": "field-price", "title": "Диапазон цены", "description": "Стоимость за сутки пребывания в номере"})(name="price")
          fieldset.filter__group
            legend.filter__group-title Дополнительные возможности
            ul.filter__list
              li.filter__item
                +checkbox({"id": "field-smoke", "title": "Можно курить"})(name="smoke")
              li.filter__item
                +checkbox({"id": "field-pets", "title": "Можно с питомцами"})(name="pets" checked)
              li.filter__item
                +checkbox({"id": "field-allow-guests", "title": "Можно пригласить гостей (до 10 человек)"})(name="allow-guests" checked)
          fieldset.filter__group
            legend.filter__group-title Доступность
            ul.filter__list
              li.filter__item
                +checkbox({
                  "id": "field-wide-aisle", 
                  "title": "Широкий коридор",
                  "theme": "rich",
                  "description": "Ширина коридоров в номере не менее 91 см."})(name="wide-aisle")
              li.filter__item
                +checkbox({
                  "id": "field-hepler", 
                  "title": "Помощник для инвалидов",
                  "theme": "rich",
                  "description": "На 1 этаже вас встретит специалист  и проводит до номера."})(name="helper")
          p.filter__group
            label.filter__label(for="field-comfort") Удобства номера
            +dropdown-comfort(id="field-comfort" name="comfort" placeholder="Выберите удобства" readonly)
          fieldset.filter__group
            +checkbox-expandable({"title": "Дополнительные удобства", 
            "items": [ 
              {"title": "Завтрак", "name": "breakfast"},
              {"title": "Письменный стол", "name": "desk"},
              {"title": "Стул для кормления", "name": "chair"},
              {"title": "Кроватка", "name": "bed"},
              {"title": "Телевизор", "name": "tv"},
              {"title": "Шампунь", "name": "shampoo"}]})
      section.rooms
        h2.rooms__title Номера, которые мы для вас подобрали
        ul.rooms__list
          -
            const rooms =
            [
              {"image": "../../images/rooms/room1.jpg","alt": "Роскошный номер на одного с большой кроватью","number": 888,"lux": true,"price": "9 990₽","rating": 5,"testimonials": 145},
              {"image": "../../images/rooms/room2.jpg","alt": "Просторный номер на троих с тремя кроватями","number": 840,"lux": false,"price": "9 990₽","rating": 4,"testimonials": 65},
              {"image": "../../images/rooms/room3.jpg","alt": "Светлый номер на одного","number": 980,"lux": true,"price": "8 500₽","rating": 3,"testimonials": 35},
              {"image": "../../images/rooms/room4.jpg","alt": "Светло-голубой номер на одного","number": 856,"lux": false,"price": "7 300₽","rating": 5,"testimonials": 19},
              {"image": "../../images/rooms/room5.jpg","alt": "Роскошный номер на одного","number": 740,"lux": false,"price": "6 600₽","rating": 4,"testimonials": 44},
              {"image": "../../images/rooms/room6.jpg","alt": "Роскошный номер на одного","number": 982,"lux": false,"price": "5 800₽","rating": 3,"testimonials": 56},
              {"image": "../../images/rooms/room7.jpg","alt": "Большой номер с телевизором","number": 678,"lux": false,"price": "5 500₽","rating": 5,"testimonials": 45},
              {"image": "../../images/rooms/room8.jpg","alt": "Роскошный номер с большой кроватью","number": 450,"lux": false,"price": "5 300₽","rating": 4,"testimonials": 39},
              {"image": "../../images/rooms/room9.jpg","alt": "Роскошный номер с большой кроватью","number": 350,"lux": false,"price": "5 000₽","rating": 3,"testimonials": 77},
              {"image": "../../images/rooms/room10.jpg","alt": "Роскошный номер с двумя кроватями и шкафом","number": 666,"lux": false,"price": "5 000₽","rating": 5,"testimonials": 25},
              {"image": "../../images/rooms/room11.jpg","alt": "Роскошный номер с двумя кроватями","number": 444,"lux": false,"price": "5 000₽","rating": 3,"testimonials": 15},
              {"image": "../../images/rooms/room12.jpg","alt": "Роскошный номер с большой кроватью","number": 352,"lux": false,"price": "5 000₽","rating": 3,"testimonials": 55}
            ]
          each item, index in rooms
            if index === 0
              li.rooms__item
                a.rooms__item-link(href="../room-page/room-page.pug")
                  +room(item)
            else
              li.rooms__item
                  +room(item)
        +pagination
  +main-footer

  script(src="./rooms-page.js")