mixin roomSearch
  article.room-search
    h2.room-search__title Найдём номера под ваши пожелания
    form.room-search__form(action="https://echo.htmlacademy.ru" method="post")
      div.room-search__group
        p.room-search__item
          label.room-search__label(for="field-date-from") Прибытие
          +dropdown(id="field-date-from" class="js-date-from" name="from" placeholder="ДД.ММ.ГГГГ" readonly)
        p.room-search__item
          label.room-search__label(for="field-date-to") Выезд
          +dropdown(id="field-date-to" class="js-date-to" name="to" placeholder="ДД.ММ.ГГГГ" readonly)
      p.room-search__group
        label.room-search__label(for="field-amount-guests") Гости
        +dropdown({"jsClasses": "js-dropdown-guests"})(id="field-amount-guests" name="guests" placeholder="Сколько гостей" readonly)
          span.dropdown__container.dropdown__container_hidden
            - const items = ["Взрослые", "Дети", "Младенцы"]
            each item in items
              span.dropdown__item
                b.dropdown__title= item
                span.dropdown__count
                  button.dropdown__control-button.dropdown__control-button_theme_minus.dropdown__control-button_disabled(type="button")
                  span.dropdown__amount 0
                  button.dropdown__control-button.dropdown__control-button_theme_plus(type="button")
            span.dropdown__item.dropdown__item_shift-from-top_20
              button.dropdown__button.dropdown__button_theme_clear-button.dropdown__button_disabled(type="button") Очистить
              button.dropdown__button.dropdown__button_theme_apply-button(type="button") Применить
      p.room-search__group
        +link({"text": "подобрать номер", "theme": "submit"})(href="../../pages/rooms-page/rooms-page.pug")
      