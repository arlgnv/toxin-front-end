article.find-room
  h2.find-room__title Найдём номера под ваши пожелания
  form.find-room__form(action="https://echo.htmlacademy.ru" method="post")
    div.find-room__group
      p.find-room__item
        label.find-room__label(for="field-date-from") Прибытие
        +field-dropdown(id="field-date-from" data-calendar="from" name="from" placeholder="ДД.ММ.ГГГГ" readonly)
      p.find-room__item
        label.find-room__label(for="field-date-to") Выезд
        +field-dropdown(id="field-date-to" data-calendar="to" name="to" placeholder="ДД.ММ.ГГГГ" readonly)
    p.find-room__item
      label.find-room__label(for="field-amount-guests") Гости
      +field-dropdown(id="field-amount-guests" data-dropdown="guests" name="guests" placeholder="Сколько гостей" readonly)
    p.find-room__item
      +button-with-purple-gradient-and-arrow("Подобрать номер", "link")(href="../../pages/rooms-page/rooms-page.pug")
      