mixin pagination({pages = [{"number": "0", "theme": "", "link": "mock-adress/change-me"}], description = ""} = {})
  div.pagination
    ul.pagination__list
      each page in pages
        - const className = "theme" in page ? `pagination__item_theme_${page.theme}` : ""
        li.pagination__item(class= className)
          a.pagination__link(href= page.link)= page.number
    p.pagination__description= description