mixin c-field-subscription(action, classes, id, title, showLabel)
  form(action= action class= classes + "__form c-field-subscription__form" method="post")
    if (showLabel == true)
      label(class= classes + "__label c-field-subscription__label" for= id)= title
    else
      label(class= classes + "__label visually-hidden c-field-subscription__label" for= id)= title
    input(class= classes + "__field c-field-subscription__field" id= id)&attributes(attributes)
    button(type="submit" class= classes + "__submit c-field-subscription__submit" aria-label="Подписаться на рассылку")
      svg(width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg")
        path(d="M9 .984L17.016 9 9 17.016l-1.406-1.407 5.578-5.625H.984V8.016h12.188L7.594 2.39 9 .984z" fill="url(#paint0_linear)")
        defs
          linearGradient(id="paint0_linear" x1="9" y1="-13" x2="9" y2="31" gradientUnits="userSpaceOnUse")
            stop(offset="0" stop-color="#BC9CFF")
            stop(offset="1" stop-color="#8BA4F9")