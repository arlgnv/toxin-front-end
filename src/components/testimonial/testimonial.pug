include ../button-like/button-like

mixin testimonial({image = "", author = "", date = "", text = "", likes = 0} = {})
  p.testimonial
    span.testimonial__author
      img.testimonial__img(src= image alt= author)
      span.testimonial__author-info
        span.testimonial__name= author
        span.testimonial__date= date
    span.testimonial__content
      span.testimonial__button
        +button-like({likes})
      span.testimonial__text= text
